{
  "manifest_version": 2,

  "name": "Serrano",
  "description": "Scrape data form the website using remote 'scripts'",
  "version": "0.1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["file:///*serrano*"],
       "js": ["lib/jquery.js", "lib/underscore.js", "helpers.js", "argumentCountParser.js", "commands.js", "tests/simplifier.js", "simplifier.js", "SerranoSL.js","content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
