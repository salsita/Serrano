{
  "manifest_version": 2,

  "name": "Serrano",
  "description": "Scrape data form the website using remote 'scripts'",
  "version": "0.1.0",

  "browser_action": {
    "default_popup": "chrome-extension/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["file:///*serrano*"],
       "js": ["../libs/jquery.js", "../libs/underscore.js", "helpers.js",
         "argumentCountChecker.js", "commands.js", "simplifier.js",
         "chrome-extension/content_script.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
